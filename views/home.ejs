<% layout("layouts/boilerplate.ejs") %>

<body>

<!-- HERO -->
<div class="container mt-5 mb-5">
    <div class="text-center">
        <h1 class="fw-semibold">
            Travel differently with 
            <span style="color:#FF385C;">airbnb</span>
        </h1>
        <p class="text-muted fs-5 mt-2">
            Discover places that feel like home — anywhere in the world.
        </p>

        <button class="btn mt-3 px-4"
                style="background:#FF385C; color:white; border-radius:30px;">
            Learn how it works
        </button>
    </div>
</div>

<!-- IMAGE SLIDER -->
<div class="container mb-5">
    <div id="heroSlider" class="carousel slide rounded-4 overflow-hidden shadow-sm" data-bs-ride="carousel">

        <div class="carousel-inner">

            <div class="carousel-item active">
                <img src="https://images.unsplash.com/photo-1505691938895-1758d7feb511"
                     class="d-block w-100"
                     style="height:420px; object-fit:cover;">
            </div>

            <div class="carousel-item">
                <img src="https://images.unsplash.com/photo-1522708323590-d24dbb6b0267"
                     class="d-block w-100"
                     style="height:420px; object-fit:cover;">
            </div>

            <div class="carousel-item">
                <img src="https://images.unsplash.com/photo-1502672260266-1c1ef2d93688"
                     class="d-block w-100"
                     style="height:420px; object-fit:cover;">
            </div>

        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#heroSlider" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>

        <button class="carousel-control-next" type="button" data-bs-target="#heroSlider" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
</div>

<!-- HOW IT WORKS -->
<div class="container mb-5">
    <h3 class="fw-semibold mb-4">How Airbnb works</h3>

    <div class="row text-center">

        <div class="col-md-4 mb-4">
            <div class="p-4 border rounded-4 h-100">
                <h5 style="color:#FF385C;">Explore</h5>
                <p class="text-muted mt-2">
                    Browse homes, rooms, and unique stays across the globe.
                </p>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="p-4 border rounded-4 h-100">
                <h5 style="color:#FF385C;">Book</h5>
                <p class="text-muted mt-2">
                    Choose your dates and book securely in just a few clicks.
                </p>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="p-4 border rounded-4 h-100">
                <h5 style="color:#FF385C;">Stay</h5>
                <p class="text-muted mt-2">
                    Live like a local and enjoy a more personal travel experience.
                </p>
            </div>
        </div>

    </div>
</div>

<!-- TYPES OF STAYS -->
<div class="container mb-5">
    <h3 class="fw-semibold mb-4">Types of stays</h3>

    <div class="row">

        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <img src="https://images.unsplash.com/photo-1560448204-e02f11c3d0e2"
                     class="card-img-top rounded-top-4"
                     style="height:220px; object-fit:cover;">
                <div class="card-body">
                    <h5>Entire homes</h5>
                    <p class="text-muted">
                        Private, comfortable spaces for families or groups.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <img src="https://images.unsplash.com/photo-1502672260266-1c1ef2d93688"
                     class="card-img-top rounded-top-4"
                     style="height:220px; object-fit:cover;">
                <div class="card-body">
                    <h5>Private rooms</h5>
                    <p class="text-muted">
                        Affordable stays with shared spaces and local hosts.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <img src="https://images.unsplash.com/photo-1522708323590-d24dbb6b0267"
                     class="card-img-top rounded-top-4"
                     style="height:220px; object-fit:cover;">
                <div class="card-body">
                    <h5>Unique stays</h5>
                    <p class="text-muted">
                        Cabins, villas, treehouses, and unforgettable places.
                    </p>
                </div>
            </div>
        </div>

    </div>
</div>

<!-- TRUST -->
<div class="container mb-5">
    <h3 class="fw-semibold mb-4">Built on trust</h3>

    <div class="row text-muted">
        <div class="col-md-4 mb-3">✔ Secure payments</div>
        <div class="col-md-4 mb-3">✔ Verified profiles</div>
        <div class="col-md-4 mb-3">✔ Reviews & ratings</div>
        <div class="col-md-4 mb-3">✔ Host–guest messaging</div>
        <div class="col-md-4 mb-3">✔ 24/7 customer support</div>
    </div>
</div>

</body>
