<% layout("layouts/boilerplate.ejs") %>

<body>
    <div class="container new-listing-page">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">

                <h2 class="page-title">Create a new listing</h2>
                <p class="page-subtitle">
                    Start with the basics. You can always edit later.
                </p>

                <form 
                    method="POST" 
                    action="/listings" 
                    enctype="multipart/form-data"
                    class="listing-form"
                >

                    <!-- Row 1 -->
                    <div class="form-row">
                        <div>
                            <label>Title</label>
                            <input type="text" name="listing[title]" placeholder="Cozy studio near the river" required>
                        </div>

                        <div>
                            <label>Price (â‚¹)</label>
                            <input type="number" name="listing[price]" placeholder="1200" required>
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="form-section">
                        <label>Description</label>
                        <textarea 
                            name="listing[description]" 
                            rows="4"
                            placeholder="What makes your place special?"
                            required
                        ></textarea>
                    </div>

                    <!-- Row 2 -->
                    <div class="form-row">
                        <div>
                            <label>Country</label>
                            <input type="text" name="listing[country]" placeholder="India" required>
                        </div>

                        <div>
                            <label>Location</label>
                            <input type="text" name="listing[location]" placeholder="Malibu, California" required>
                        </div>
                    </div>

                    <!-- Image -->
                    <div class="form-section">
                        <label>Listing image</label>
                        <input type="file" name="listing[image]" required>
                    </div>

                    <button class="primary-cta">
                        Create listing
                    </button>

                </form>
            </div>
        </div>
    </div>
</body>
